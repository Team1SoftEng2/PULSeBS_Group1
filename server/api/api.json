{
    "openapi": "3.0.1",
    "info": {
        "title": "Pandemic University Lecture Seat Booking System (PULSeBS)",
        "version": "1.0.0",
        "description": "A system that allow students to book a seat for in presence lectures",
        "termsOfService": "http://swagger.io/terms/",
        "license": {
          "name": "Apache 2.0",
          "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        }
    },
    "externalDocs": {
        "description": "Find out more about Swagger",
        "url": "http://swagger.io"
    },
    "tags": [
        {
            "name": "authentication",
            "description": "log in/log out operations"
        },
        {
            "name": "bookings",
            "description": "Actions on bookings"
        },
        {
            "name": "student",
            "description": "Actions on student"
        },
        {
            "name": "lectures",
            "description": "Actions on lectures"
        },
        {
            "name": "course",
            "description": "Actions on course"
        }
    ],
    "paths": {
        "/api/login": {
            "post": {
                "tags": ["operations"],
                "description": "Log in",
                "parameters": [],
                "requestBody":{
                    "content": {
                        "application/json":{
                            "schema": {
                                "properties": {
                                    "id": { "type": "string", "format": "id" },
                                    "password": { "type": "string", "minLength": 6 }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/user"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "404": {
                        "description": "Not Found"
                    }
                }
            }
        }, 
          "/api/logout": {
            "post":{
                "tags": ["operations"],
                "description": "Log Out",
                "parameters": [],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/api/bookings": {
            "post":{
                "tags": ["bookings"],
                "description": "Book a place for an in-presence lecture",
                "parameters": [],
                "requestBody":{
                    "content": {
                        "application/json":{
                            "schema":{
                                "$ref": "#/components/schemas/booking"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            },
            "get": {
                "tags": ["bookings"],
                "description": "Get a filtered list of bookings",
                "parameters": [
                    {
                        "name": "lectureId",
                        "schema": { "type": "string" },
                        "in": "query",
                        "required": false
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json":{
                                "schema": { "$ref":"#/components/schemas/bookings" }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                      },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/api/students/{id}": {
            "parameters": [
                { 
                    "name": "id",
                    "schema": {"type": "integer"},
                    "in": "path",
                    "required": true
                }
            ],
            "get":{
                "tags": ["student"],
                "description": "Get info about a student",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json":{
                                "schema": { "$ref":"#/components/schemas/user" }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                      },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/api/students/{id}/courses": {
            "parameters": [
                { 
                    "name": "id",
                    "schema": {"type": "integer"},
                    "in": "path",
                    "required": true
                }
            ],
            "get":{
                "tags": ["courses"],
                "description": "Get list of courses the student is enrolled in",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json":{
                                "schema": { "$ref":"#/components/schemas/courses" }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/api/courses/{id}": {
            "parameters": [
                { 
                    "name": "id",
                    "schema": {"type": "integer"},
                    "in": "path",
                    "required": true
                }
            ],
            "get":{
                "tags": ["course"],
                "description": "Get info about a course",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json":{
                                "schema": { "$ref":"#/components/schemas/course" }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                      },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/api/lectures": {
            "get": {
                "tags": ["lectures"],
                "description": "Get a filtered list of lectures",
                "parameters": [
                    {
                        "name": "courseId",
                        "schema": { "type": "string" },
                        "in": "query",
                        "required": false
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json":{
                                "schema": { "$ref":"#/components/schemas/lectures" }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                      },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/api/lectures/{id}": {
            "delete": {
                "tags": ["lectures"],
                "description": "Delete a lecture up 1h before its scheduled time",
                "parameters": [
                    {
                        "name": "lectureID",
                        "schema": { "type": "string" },
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Deleted" 
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "404": {
                        "description": "Lecture not found"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "user" : {
                "type": "object",
                "properties": {
                    "userId": { "type": "integer" },
                    "name": { "type": "string" },
                    "surname": { "type": "string" },
                    "email": { "type": "string", "format": "email"},
                    "hash": { "type": "string" }
                },
                "required": ["userId", "name", "surname", "email"]
            },
            "users": {
                "type": "array",
                "items": { "$ref": "#/components/schemas/user" }
            },
            "course": {
                "type": "object",
                "properties": {
                    "courseId": { "type": "string" },
                    "teacherId": { "type": "integer" },
                    "name": { "type": "string" }
                },
                "required": ["courseId", "teacherId", "name"]
            },
            "courses": {
                "type": "array",
                "items": { "$ref": "#/components/schemas/course" }
            },
            "lecture": {
                "type": "object",
                "properties": {
                    "lectureId": { "type": "integer" },
                    "courseId": { "type": "string" },
                    "teacherId": { "type": "integer" },
                    "date": { "type": "string", "format": "date" },
                    "time": { "type": "string", "format": "time"},
                    "mode": { "type": "string" },
                    "room": { "type": "string" },
                    "maxSeats": { "type": "integer" }
                },
                "required": [ "lectureId", "courseId", "teacherId", "date", "time", "mode" ]
            },
            "lectures": {
                "type": "array",
                "items": { "$ref": "#/components/schemas/lecture" }
            },
            "booking":{
                "type": "object",
                "properties": {
                    "studentId": { "type": "integer" },
                    "lectureId": { "type": "integer" }
                },
                "required": ["studentId, lectureId"]
            },
            "bookings": {
                "type": "array",
                "items": { "$ref": "#/components/schemas/booking" }
            }
        }
    }
}